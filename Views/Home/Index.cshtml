    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Images/Customer01.jpg" alt="Los Angeles" width="600" height="270">
        </div>
        <div class="carousel-item">
            <img src="~/Images/Customer02.jpg" alt="Chicago" width="600" height="270">
        </div>
        <div class="carousel-item">
            <img src="~/Images/Customer03.jpg" alt="Chicago" width="600" height="270">
        </div>
        <div class="carousel-item">
            <img src="~/Images/Customer04.jpg" alt="Chicago" width="600" height="270">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev" >
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next" >
        <span class="carousel-control-next-icon"></span>
    </a>
